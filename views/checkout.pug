extends base
include _navBar
include _cart

block overlay
    .overlay 
        +cart

block header
    header.header-product.content-center
        +navBar(user)
block content
    main.main-bg-gray
        .goback-button.content-center
             a(href="/") Go Back
        section.checkout.content-center
            .checkout__form
                h3.heading.heading--tertiary.heading__from-checkout Checkout
                form.form(action="")
                    h6.heading.heading__form-title Billing Details
                    .form__section.form__customer-info.form__wrap
                        .form__group
                            label(for="name") Name
                            input.input__class(type="text" id= "name" name="name")
                        .form__group
                            label(for="email") Email Address
                            input(type="email" id="email" name="name")
                        .form__group
                            label(for="phone") Phone Number
                            input(type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}")
                    h6.heading.heading__form-title Shipping Info
                    .form__section.form__address
                        .form__group
                            label(for="address") Address
                            input(type="text" id= "address" name="address")
                    .form__wrap
                        .form__group
                            label(for="zipcode") Zip Code
                            input(type="text" id="zipcode" name="zipcode")
                        .form__group
                            label(for="city") City 
                            input(type="text" id="city" name="city")
                        .form__group
                            label(for="city") Country 
                            input(type="text" id="city" name="city")
